{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>UrlProfil</th>
                <td>{{ document.urlProfil }}</td>
            </tr>
            <tr>
                <th>LastUpdate</th>
                <td>{{ document.lastUpdate ? document.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PieceJointe</th>
                <td>{{ document.pieceJointe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_index') }}">back to list</a>

    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
