{% extends 'base.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block body %}
    <h1>Competence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Technologies</th>
                <th>Frameworks</th>
                <th>Environnement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.technologies }}</td>
                <td>{{ competence.frameworks }}</td>
                <td>{{ competence.environnement }}</td>
                <td>
                    <a href="{{ path('competence_show', {'id': competence.id}) }}">show</a>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competence_new') }}">Create new</a>
{% endblock %}
